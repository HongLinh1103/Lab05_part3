<%- include('../partials/header') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card">
        <div class="card-header text-center">
          <h4>Đăng Ký Tài Khoản</h4>
        </div>
        <div class="card-body">
          <!-- Display flash messages -->
          <% if (error && error.length > 0) { %>
            <div class="alert alert-danger">
              <%= error %>
            </div>
          <% } %>
          
          <% if (success && success.length > 0) { %>
            <div class="alert alert-success">
              <%= success %>
            </div>
          <% } %>

          <form action="/auth/register" method="POST">
            <div class="form-group mb-3">
              <label for="fullName">Họ và Tên</label>
              <input 
                type="text" 
                class="form-control" 
                id="fullName" 
                name="fullName" 
                value="<%= oldInput.fullName || '' %>"
                required
                placeholder="Nhập họ và tên đầy đủ"
              >
            </div>
            
            <div class="form-group mb-3">
              <label for="username">Tên Đăng Nhập</label>
              <input 
                type="text" 
                class="form-control" 
                id="username" 
                name="username" 
                value="<%= oldInput.username || '' %>"
                required
                placeholder="Nhập tên đăng nhập (3-30 ký tự)"
                minlength="3"
                maxlength="30"
              >
            </div>
            
            <div class="form-group mb-3">
              <label for="email">Email</label>
              <input 
                type="email" 
                class="form-control" 
                id="email" 
                name="email" 
                value="<%= oldInput.email || '' %>"
                required
                placeholder="Nhập địa chỉ email"
              >
            </div>
            
            <div class="form-group mb-3">
              <label for="phone">Số Điện Thoại</label>
              <input 
                type="tel" 
                class="form-control" 
                id="phone" 
                name="phone" 
                value="<%= oldInput.phone || '' %>"
                required
                placeholder="Nhập số điện thoại"
                pattern="[\d\-\+\(\)\s]+"
              >
            </div>
            
            <div class="form-group mb-3">
              <label for="password">Mật Khẩu</label>
              <input 
                type="password" 
                class="form-control" 
                id="password" 
                name="password" 
                required
                placeholder="Nhập mật khẩu (tối thiểu 6 ký tự)"
                minlength="6"
                onkeyup="checkPasswordMatch()"
              >
              <small class="form-text text-muted">Mật khẩu phải có ít nhất 6 ký tự</small>
            </div>
            
            <div class="form-group mb-3">
              <label for="confirmPassword">Xác Nhận Mật Khẩu</label>
              <input 
                type="password" 
                class="form-control" 
                id="confirmPassword" 
                name="confirmPassword" 
                required
                placeholder="Nhập lại mật khẩu để xác nhận"
                minlength="6"
                onkeyup="checkPasswordMatch()"
              >
              <div id="password-match-message" class="mt-1"></div>
            </div>
            
            <button type="submit" class="btn btn-success w-100" id="registerBtn">Đăng Ký</button>
          </form>
          
          <div class="text-center mt-3">
            <p>Đã có tài khoản? <a href="/auth/login">Đăng nhập tại đây</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Validation mật khẩu xác nhận
function checkPasswordMatch() {
  const password = document.getElementById('password').value;
  const confirmPassword = document.getElementById('confirmPassword').value;
  const messageDiv = document.getElementById('password-match-message');
  const registerBtn = document.getElementById('registerBtn');
  
  if (confirmPassword === '') {
    messageDiv.innerHTML = '';
    registerBtn.disabled = false;
    return;
  }
  
  if (password === confirmPassword) {
    messageDiv.innerHTML = '<small class="text-success"><i class="fas fa-check"></i> Mật khẩu khớp</small>';
    registerBtn.disabled = false;
  } else {
    messageDiv.innerHTML = '<small class="text-danger"><i class="fas fa-times"></i> Mật khẩu không khớp</small>';
    registerBtn.disabled = true;
  }
}

// Kiểm tra khi submit form
document.addEventListener('DOMContentLoaded', function() {
  const form = document.querySelector('form');
  
  form.addEventListener('submit', function(e) {
    const password = document.getElementById('password').value;
    const confirmPassword = document.getElementById('confirmPassword').value;
    
    if (password !== confirmPassword) {
      e.preventDefault();
      alert('Mật khẩu xác nhận không khớp!');
      return false;
    }
  });
});
</script>

<%- include('../partials/footer') %>
